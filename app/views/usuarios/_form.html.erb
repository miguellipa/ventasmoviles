<%= simple_form_for(@usuario) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nombre %>
    <%= f.input :usuario %>
    <%= f.input :password %>
    <%= f.association :tipo , label_method: "#{:tipo}" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
