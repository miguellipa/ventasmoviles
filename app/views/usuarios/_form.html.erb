<%= simple_form_for @usuario, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nombre %>
  <%= error_span(@usuario[:nombre]) %>
  <%= f.input :usuario %>
  <%= error_span(@usuario[:usuario]) %>
  <%= f.input :password %>
  <%= error_span(@usuario[:password]) %>
  <%= f.association :tipo, :label_method => lambda { |tipo| "#{tipo.tipo}" }  %>
  <%= error_span(@usuario[:tipo_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                root_path, :class => 'btn btn-default' %>
<% end %>
