<%= simple_form_for @tipo, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :tipo %>
  <%= error_span(@tipo[:tipo]) %>
  <%= f.input :descripcion %>
  <%= error_span(@tipo[:descripcion]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tipos_path, :class => 'btn btn-default' %>
<% end %>
