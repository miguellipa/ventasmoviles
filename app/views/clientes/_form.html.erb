<%= simple_form_for(@cliente) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nombre %>
    <%= f.input :provincia %>
    <%= f.input :distrito %>
    <%= f.input :direccion %>
    <%= f.input :telefono %>
    <%= f.input :ruc %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
